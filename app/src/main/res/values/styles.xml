<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
   
<style name="PauseDialog" parent="@android:style/Theme.Holo.Dialog">
    <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
</style>

<style name="PauseDialogAnimation">
    <item name="android:windowEnterAnimation">@anim/fadein</item>
    <item name="android:windowExitAnimation">@anim/fadeout</item>
</style>

<style name="PauseDialog2" parent="@android:style/Theme.Holo.Dialog">
    <item name="android:windowAnimationStyle">@style/PauseDialogAnimation2</item>
</style>

<style name="PauseDialogAnimation2">
    <item name="android:windowEnterAnimation">@anim/fadein2</item>
    <item name="android:windowExitAnimation">@anim/fadeout2</item>
</style>

<style name="MyAnim">
    <item name="@android:windowEnterAnimation">@anim/fadein3</item>
    <item name="@android:windowExitAnimation">@anim/fadeout3</item>
</style>

<style name="PauseDialog3" parent="@android:style/Theme.Holo.Dialog">
    <item name="android:windowAnimationStyle">@style/PauseDialogAnimation3</item>
</style>

<style name="PauseDialogAnimation3">
    <item name="android:windowEnterAnimation">@anim/fadein3</item>
    <item name="android:windowExitAnimation">@anim/fadeout3</item>
</style>



</resources>
